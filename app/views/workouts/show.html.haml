#workout
	%p= @workout.date.strftime("%B, %Y at %-I:%M %p")
	%p= @workout.workout
	%p= @workout.mood
	%p= @workout.length

#exercises
	%h2 Exercises
	= render @workout.exercises

	%h3 Add an exercise
	= render "exercises/form"

= link_to "Back", root_path
= link_to "Edit", edit_workout_path(@workout)
= button_to "Delete", workout_path(@workout), method: :delete, data: { confirm: "Are you sure?" }